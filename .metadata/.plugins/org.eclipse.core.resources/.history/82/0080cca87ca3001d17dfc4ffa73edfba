package day04;

import java.util.Scanner;

public class 문제 {

	public static void main(String[] args) {
		/* 1~50사이의 랜덤수 하나를 생성 후 맞히는 게임.
		 * 예) 컴퓨터가 랜덤수를 생성했습니다. : 45
		 * 사용자 입력 : 20
		 * up!
		 * 사용자 입력 : 30
		 * up!
		 * 사용자 입력 : 49
		 * down!
		 * 사용자 입력 : 45
		 * 정답입니다.
		 */
		
		Scanner scan = new Scanner(System.in);
		
		int num = (int)(Math.random()*50) +1;
			System.out.println("컴퓨터가 랜덤수를 생성했습니다.");
    		// System.out.println(num);
		
		for(; ;) {
			System.out.println("숫자를 입력해 주세요.");
			int num1 = scan.nextInt();
			
			if(num1==num) {
				System.out.println("정답입니다.");
				break;
			} else if(num1<num) {
				System.out.println("더 큰 수를 입력해 주세요.");
			} else if(num1>num) {
				System.out.println("더 작은 수를 입력해 주세요.");
			}
		}
		
		
		System.out.println("----선생님 정답----");
		System.out.println();
		
		/* 스캐너 열기
		 * Scanner scan = new Scanner(System.in);
		 * 랜덤수 결정하기
		 * int random = (int)(Math.random()*50) +1;
		 * int num=0, count=0;
		 * System.out.println("컴퓨터가 랜덤수를 결정했습니다. (1~50까지)");
		 * 
		 * 반복문 열기
		 * while(num!=random) {
		 * 		system.out.println("입력: ");
		 * 		num = scan.nextInt();
		 * 		count++;   사용자가 입력했을 때 1 증가
		 * 비교
		 * if(num <1 || num > 50) {
		 * 		System.out.println("입력 범위를 벗어났습니다. (1~50)");
		 * } else {
		 * 		if(num > random) {
		 * 			System.out.println("down~!!");
		 * 		} else if(num < random) {
		 * 			System.out.println("up~!!");
		 * 		} else {
		 * 			System.out.println("정답입니다~!!");
		 * 		}
		 * 	}
		 * 	System.out.println("게임횟수 : "+count);
		 * }
		 
		 */
		
		
		
		


		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
