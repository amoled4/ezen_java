		 * 평균 :
		 */
		
		Scanner scan = new Scanner(System.in);
		
		int num = 5;
		int num1;
		int sum=0;
		double avg;
		int arr[] = new int[num];
		
//		for(int j=1; j<=num ;j++) {
			for(int i=0; i<arr.length; i++) {
			System.out.println("점수를 입력해 주세요.");
			num1 = scan.nextInt();
			arr[i] = num1;
			System.out.println(arr[i]);
			sum += num1;
			System.out.println(sum);
			}
		
	}

