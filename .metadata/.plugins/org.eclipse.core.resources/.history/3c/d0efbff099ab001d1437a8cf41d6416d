package day10;

import java.util.Scanner;

public class 과제 {
	static Scanner scan = new Scanner(System.in); 
	public static void main(String[] args) {
		/* Product 클래스 : 상품을 등록하는 클래스
		 * 멤버변수 : 상품명, 가격
		 * 상품 등록 메서드 = insertProduct
		 * 출력 메서드 toString
		 * getter/setter
		 */
		
		/* ProductMain
		 * product 배열 생성 [10]
		 * 
		 * 상품 등록 후 리스트 출력
		 * 
		 * 스캐너를 통해서 상품 등록
		 * 상품을 등록하시겟습니까? (y/n)
		 * y => 상품등록 반복 / n => 그만
		 * 상품 이름과 가격을 등록받아 상품 배열에 등록
		 * n => 등록된 제품 리스트 출력
		 */
		
		Product[] pro = new Product[10];
		String regi= null;
		String name = null;
		int price = 0;
		int cnt=0;
		
		for(int i=0; i<pro.length; i++) {
			System.out.println("상품을 등록하시겠습니까? (y/n)");
			regi = scan.next();
			if(regi.equals("y")) {	
				System.out.println("상품명 입력:");
				name = scan.next();
				System.out.println("가격 입력:");
				price = scan.nextInt();
				Product tmp = new Product();
				tmp.insertProduct(name, price);
				pro[cnt] = tmp;
			} else if(regi.equals("n")) {
				for(Product tmp : pro) {
					if(tmp!=null) {
						//System.out.println(tmp.toString());
						pro[i].print();
					}
				} break;

			}
				
		}

	}

}
